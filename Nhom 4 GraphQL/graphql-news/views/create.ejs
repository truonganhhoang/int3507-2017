<script>
    var graph = graphql("/graphql")//connect

    var categorys = graph(`query{
            Categorys {
                _id
                name
                }
            }`);
    categorys().then(function (response) {
        var categorys = response.Categorys;
        var options = "";
        for (let i = 0; i < categorys.length; i++) {
            options += "<option value=" + categorys[i]._id + ">" + categorys[i].name.toUpperCase() + "</option>";
        }
        $('#category').html(options);

        $('#loader-data').hide();
    }).catch(function (error) {
        alert(error);
    })

    CKEDITOR.replace('editor1');

    $("#imgInp").change(function () {
        readURL(this);
    });

    var userId = '<%- userId %>';
    $('#save').click(function (e) {
        $('#loader-data').show();
        var title = $('#title').val();
        var fileImage = $('#imgInp')[0].files[0];
        var categoryId = $('#category').find('option:selected').val();
        var editor_data = CKEDITOR.instances.editor1.getData().toString();
        var editor = editor_data.replace(/\n/ig, '');

        // return;
        var formData = new FormData();
        formData.append('upload', fileImage, fileImage.name);
        $.ajax({
            url: '/uploader/upload',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (data) {
                let image = data;
                graph(`mutation($title: String!, $image: String!,$content: String!,$category_id: String!,$author_id:String!){
                 addNews(data:{
                        title: $title,
                        image: $image,
                        content: $content,
                        category_id: $category_id
                        author_id:$author_id
                    }) {
                        _id
                    }
                 }`, {
                        title: title,
                        image: image,
                        content: editor,
                        category_id: categoryId,
                        author_id: userId
                    }).then(function (response) {
                        $('#loader-data').hide();
                    }).catch(function (error) {
                        console.log(error)
                    })
            }
        });



    });
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    //validation form
    //chua xong
    function checkValidation() {

        if (title == '' || editor == '') {
            alert('Validation');
        }
    }

</script>

